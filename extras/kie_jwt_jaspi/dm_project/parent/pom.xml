<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- parent coordinates -->
    <groupId>com.bacop.jwt_dm_project</groupId>
    <artifactId>parent</artifactId>
    <version>2.3-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>parent</name>

    <properties>
        <maven.deploy.skip>false</maven.deploy.skip>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <rhpam.bom.version>7.7.1.redhat-00002</rhpam.bom.version>
        <kie.version>7.33.0.Final-redhat-00003</kie.version>
        <junit.version>4.12</junit.version>
        <slf4j-simple.version>1.7.25.redhat-00001</slf4j-simple.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>

    <profiles>
	
        <profile>
            <id>AZURE</id>
            <distributionManagement>
                <repository>
                    <id>dev-azure-com-rouvas-rouvas-release</id>
                    <url>https://pkgs.dev.azure.com/rouvas/_packaging/rouvas/maven/v1</url>
                    <layout>default</layout>
                </repository>
                <snapshotRepository>
                    <uniqueVersion>true</uniqueVersion>
                    <id>dev-azure-com-rouvas-rouvas-snapshot</id>
                    <url>https://pkgs.dev.azure.com/rouvas/_packaging/rouvas/maven/v1</url>
                </snapshotRepository>
            </distributionManagement>
        </profile>
	
        <profile>
            <id>LOCAL_BC</id>
            <distributionManagement>
                <repository>
                    <id>guvnor_m2_repo</id>
                    <url>http://localhost:8080/decision-central/maven2/</url>
                    <layout>default</layout>
                </repository>
                <snapshotRepository>
                    <uniqueVersion>true</uniqueVersion>
                    <id>guvnor_m2_repo</id>
                    <url>http://localhost:8080/decision-central/maven2/</url>
                </snapshotRepository>
            </distributionManagement>
        </profile>
	
        <profile>
            <id>NEXUS</id>
            <distributionManagement>
                <repository>
                    <id>nexus_local_release</id>
                    <url>http://192.168.0.100:8081/repository/maven-releases/</url>
                    <layout>default</layout>
                </repository>
                <snapshotRepository>
                    <uniqueVersion>true</uniqueVersion>
                    <id>nexus_local_snapshot</id>
                    <url>http://192.168.0.100:8081/repository/maven-snapshots/</url>
                </snapshotRepository>
            </distributionManagement>
        </profile>

    </profiles>

    <modules>
        <module>../rules</module>
        <module>../javaClient</module>
        <module>../droolsLogger</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.redhat.ba</groupId>
                <artifactId>ba-platform-bom</artifactId>
                <version>${rhpam.bom.version}</version>	
                <scope>import</scope>
                <type>pom</type>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>


    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>1.8</source>
                        <target>1.8</target>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
